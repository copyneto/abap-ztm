<c:FragmentDefinition                                                                                                                                                                                                                                          
    xmlns="sap.m"                                                                                                                                                                                                                                              
	xmlns:c="sap.ui.core"                                                                                                                                                                                                                                         
    xmlns:core="sap.ui.core">                                                                                                                                                                                                                                  
    <MessagePopover                                                                                                                                                                                                                                            
        items="{message>/}"&nbsp;                                                                                                                                                                                                                              
        initiallyExpanded="true">                                                                                                                                                                                                                              
        <MessageItem                                                                                                                                                                                                                                           
            type="{message>type}"                                                                                                                                                                                                                              
            title="{message>message}"                                                                                                                                                                                                                          
            subtitle="{message>additionalText}"                                                                                                                                                                                                                
            description="{message>description}"/>                                                                                                                                                                                                              
    </MessagePopover>                                                                                                                                                                                                                                          
</c:FragmentDefinition>                                                                                                                                                                                                                                        
                                                                                                                                                                                                                                                               